<ul class="tabs">
  {{#each titles as |title i|}}
    <li class="tabs__item {{if (eq currentTab i) "tabs__item--active"}}" role="button" {{action "setTab" i}}>
      {{title}}
    </li>
  {{/each}}
  {{#if btnLabel}}
    <li class="tabs__button uni-button uni-button--primary" role="button" {{action "onBtnClick"}}>
      {{btnLabel}}
    </li>
  {{/if}}
</ul>

{{#if optionSelected}}
  {{yield optionSelected currentTab}}
{{/if}}
