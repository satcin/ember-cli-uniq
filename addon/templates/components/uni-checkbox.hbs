{{#uni-input-container isChecked=isSelected}}
  <input
    type="checkbox"
    value={{value}}
    checked={{isSelected}}
    name={{name}}
    id={{i '${id}-checkbox' id=elementId}}
    disabled={{if isDisabled 'disabled' ''}}
    class={{i "uni-checkbox ${disabledClass} ${errorClass}"
      disabledClass=(if isDisabled "uni-checkbox--disabled" '')
      errorClass=(if hasError "uni-checkbox--error" '')}}>

  <label for={{i '${id}-checkbox' id=elementId}}>
    {{{label}}}
    {{#if isSelected}}
      {{inline-svg "icons/checkbox-icon.svg"}}
    {{/if}}
  </label>
{{/uni-input-container}}
