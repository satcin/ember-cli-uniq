{{input
  type=type
  value=computedValue
  placeholder=placeholder
  disabled=disabled
  name=name
  readonly=readonly
  maxlength=maxLength
  change=(action "onChange")
  key-down=(action "onKeyDown")
  key-up=(action "onKeyUp")
  class=(i "${default} ${custom} ${success} ${error} ${warning}"
    default=defaultClass
    custom=customClass
    success=successClass
    error=errorClass
    warning=warningClass)}}

{{#if showTooltip}}
  {{uni-tooltip isAlternative=true isActive=true content=tooltipMessage}}
{{/if}}
