<span class="uni-tooltip__icon">
    {{#if isInformation}}
        {{inline-svg "icons/information-icon"}}
    {{else if isQuestion}}
        {{inline-svg "icons/question-icon"}}
    {{else}}
        {{yield}}
    {{/if}}
</span>
<div class="uni-tooltip__text">
    {{#if title}}
        <div class="uni-tooltip__text__title">{{{title}}}</div>
    {{/if}}
    {{{content}}}
</div>
