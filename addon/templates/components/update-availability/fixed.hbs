{{#each availabilityOptions as |availabilityOption index|}}
  <div class="option option--{{availabilityOption.status}}">
    <div class="option__label">
      <p>{{labelOption}} {{inc index}}</p>
    </div>

    {{#power-select
      placeholderComponent="update-availability/fixed-placeholder"
      placeholder=(compute (action "placeholder" availabilityOption))
      options=options
      searchEnabled=false
      renderInPlace=true
      highlighted=false
      onchange=(action "updateAvailability" index) as |option|}}
      {{option.value}}
    {{/power-select}}

    {{#if allowEditOptions}}
      <div class="option__link link" {{action "deleteOption" index}}>Delete</div>
    {{/if}}
  </div>
{{else}}
  <div class="options__none">{{labelEmpty}}</div>
{{/each}}

{{#if allowEditOptions}}
  <p class="link" {{action (toggle "displayNewOptionSection" this)}}>{{labelAdd}}</p>
{{/if}}

{{#if displayNewOptionSection}}
  <div class="options__add">
    {{labelFrom}}
    {{uni-datepicker-input selected=startDate onSelected=(action (mut startDate))}}

    {{labelTo}}
    {{uni-datepicker-input selected=endDate onSelected=(action (mut endDate))}}

    {{uni-input-price value=contractValue per=labelPer}}

    <div class="link" {{action "addOption"}}>{{labelOk}}</div>
  </div>
{{/if}}
