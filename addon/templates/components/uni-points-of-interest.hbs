<div class="uni-points-of-interest__wrapper">
  {{inline-svg 'uniplaces_logo.svg' class="logo"}}
  {{input type="number" class="uni-input uni-input--small uni-input--bordered" placeholder="latitude" value=(mut latitude)}}
  {{input type="number" class="uni-input uni-input--small uni-input--bordered" placeholder="longitude" value=(mut longitude)}}

  <br><br>
  {{#g-map lat=latitude lng=longitude zoom=zoom markersFitMode=markersFitMode options=mapOptions as |context|}}
      {{#each markers as |marker|}}
          {{g-map-marker context lat=marker.lat lng=marker.long title=marker.title icon=marker.icon}}
      {{/each}}
  {{/g-map}}

  <div class="uni-points-of-interest__cards">
    {{#each markers as |marker|}}
      <div class="uni-points-of-interest__cards__card">
        <div class="uni-points-of-interest__cards__card__thumbnail" style="background-image: url({{marker.image}})"></div>

        <div class="uni-points-of-interest__cards__card__category"></div>

        <div class="uni-points-of-interest__cards__card__content">
          title: {{marker.title}}<br>
          category: {{marker.category}}<br>
        </div>
      </div>
    {{/each}}
  </div>
</div>
