<header id="uni-header" class="uni-header {{if isTransparent 'uni-header--transparent'}}">
    <div class="uni-header__wrapper">
        <div class="uni-header__logo">
            {{inline-svg (if isTransparent "uniplaces_logo_white.svg" "uniplaces_logo.svg")}}
        </div>

        {{#if step}}
            {{uni-header-breadcrumbs step=step description=description}}
        {{/if}}

        <nav class="uni-header__nav">
            {{uni-header-menu withExit=withExit loggedIn=loggedIn}}
        </nav>
    </div>
</header>
