{{uni-select
  placeholder=selectPlaceholder
  selected=language
  options=options
  onChange=(action "onChangeSelect")}}

{{input
  disabled=isInputDisabled
  value=number
  placeholder=placeholder
  maxlength=maxLength
  key-down=(action "onChangeInput")}}

  {{#if showTooltip}}
    {{uni-tooltip isAlternative=true isActive=true content=tooltipMessage}}
  {{/if}}
