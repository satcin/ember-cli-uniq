{{uni-select
  class="uni-mobile-number__select-wrapper"
  placeholder=selectPlaceholder
  selected=language
  options=options
  useAlias=true
  onChange=(action "onChangeSelect")}}

{{input
  disabled=isInputDisabled
  value=number
  type="number"
  placeholder=placeholder
  maxlength=maxLength
  focusIn=(action "onInputFocusIn")
  focusOut=(action "onInputFocusOut")
  key-down=(action "onKeyDown")
  key-up=(action "onKeyUp")}}

  {{#if showTooltip}}
    {{uni-tooltip isAlternative=true isActive=true content=tooltipMessage}}
  {{/if}}
