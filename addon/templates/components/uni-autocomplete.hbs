{{input
  value=value
  placeholder=placeholder
  focus-in=(action "showOptions")
  class="uni-input uni-input--bordered"
  key-down=(action "keyPress")}}

{{#if optionsFiltered}}
  {{#if showOptions}}
    <ul class="options">
      {{#each optionsFiltered as |option index|}}
        <li {{action "onSelected" option}}>
          <span class="option {{if (eq index highlighted) 'option--highlighted'}}" {{action "setHighlighted" index on="mouseEnter"}}>
            {{yield option}}
          </span>
        </li>
      {{/each}}
    </ul>
  {{/if}}
{{else}}
  {{component noResultsComponent value=value}}
{{/if}}
