{{uni-anchor label="This is an anchor"}}
<p class="code-snippet">
  \{{uni-anchor label="This is an anchor"}}
  <br><br>
</p>

{{uni-title title='Buttons'}}
<div class="flex-wrapper">
  {{uni-button isPrimary=true label="Primary"}}
  {{uni-button isSecondary=true label="Secondary"}}
  {{uni-button isDisabled=true label="Disabled"}}
</div>

<p class="code-snippet">
  \{{uni-button isPrimary=true label="Primary" customAction=(action "someAction")}}<br><br>
  \{{uni-button isSecondary=true label="Secondary" customAction=(action "someAction")}}<br><br>
  \{{uni-button isDisabled=true label="Disabled" customAction=(action "someAction")}}
  <br><br>
</p>

{{uni-title title="Checkboxes"}}
<div class="flex-wrapper">
  {{uni-checkbox label="Selected" isSelected=true}}
  {{uni-checkbox label="Not selected" isSelected=false}}
</div>
<p class="code-snippet">
  \{{uni-checkbox label="Selected" isSelected=true}}<br><br>
  \{{uni-checkbox label="Not selected" isSelected=false}}
  <br><br>
</p>

{{uni-title title="Dropdown"}}
{{#uni-dropdown
  selected="Filipe"
  options=(array "Profile" "Preferences" "Logout") as |option|}}
  {{option}}
{{/uni-dropdown}}
<br><br>

{{uni-title title="Inputs"}}
{{uni-title title="uni-input-range"}}
{{uni-input-range placeholder="0" value="10" target="items"}}
<p class="code-snippet">
  \{{uni-input-range placeholder="0" value="10" target="items"}}
</p>
{{uni-title title="uni-input-price"}}
{{uni-input-price placeholder="00" currency="€" isRightSideCurrency=true per="month"}}
<p class="code-snippet">
  \{{uni-input-price placeholder="00" currency="€" isRightSideCurrency=true per="month"}}
</p>
{{uni-title title="uni-mobile-number"}}
{{uni-mobile-number }}

{{uni-title title='Textarea'}}
{{uni-textarea placeholder="This is a placeholder"}}
{{#uni-textarea placeholder="You can also count characters" as |count|}}
  {{count}} characters
{{/uni-textarea}}
<p class="code-snippet">
  \{{uni-textarea}}<br><br>
  \{{#uni-textarea placeholder="You can also count characters" as |count|}}<br>
  <span class="tab">\{{count}} characters</span><br>
  \{{/uni-textarea}}
  <br><br>
</p>

